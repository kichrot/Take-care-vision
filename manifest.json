{
    "manifest_version": 3,
    "minimum_chrome_version": "88",
    "name": "__MSG_Take_care_vision_title__",
    "default_locale": "en",
    "description": "__MSG_Take_care_vision_description__",
    "version": "0.1",
    "options_page": "options.html",
    "homepage_url": "https://github.com/kichrot/Take-care-vision",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting"
    ],
    "icons": {
        "48": "/icons/icon_red.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "open_in_tab": true,
        "page": "options.html"
    },
    "action": {
        "default_icon": {
            "48": "/icons/icon_red.png"
        },
        "default_popup": "popup.html",
        "default_title": "__MSG_Take_care_vision_title__"
    },
    "content_scripts": [{
        "all_frames": true,
        "js": [
            "zoom.js"
        ],
        "match_about_blank": true,
        "matches": [
            "http://*/*",
            "https://*/*",
            "file:///*"
        ],
        "run_at": "document_start"
    }]
}